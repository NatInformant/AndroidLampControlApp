<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/lamp_brightness_seek_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите яркость лампы:"
        app:layout_constraintStart_toStartOf="@id/lamp_brightness_seek_bar"
        app:layout_constraintEnd_toEndOf="@id/lamp_brightness_seek_bar"
        app:layout_constraintBottom_toTopOf="@id/lamp_brightness_seek_bar"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        />

    <SeekBar
        android:id="@+id/lamp_brightness_seek_bar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/colors_spinner_title"
        />


    <TextView
        android:id="@+id/colors_spinner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите цвет лампы:"
        app:layout_constraintStart_toStartOf="@id/colors_spinner"
        app:layout_constraintEnd_toEndOf="@id/colors_spinner"
        app:layout_constraintBottom_toTopOf="@id/colors_spinner"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        />

    <Spinner
        android:id="@+id/colors_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lamp_on_or_off_button"
        android:layout_marginBottom="200dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/lamp_on_or_off_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text = "@string/lamp_on_button_tittle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>